{
  "name": "sibling-helper-parent-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --dir src/__tests__",
    "test:components": "vitest run --dir src/components/__tests__",
    "test:repositories": "vitest run --dir src/data/repositories/__tests__",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@sibling-helper/shared": "file:../shared",
    "canvas-confetti": "^1.9.3",
    "dexie": "^4.2.0",
    "framer-motion": "^12.23.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.8.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.0",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fake-indexeddb": "^6.2.2",
    "jsdom": "^26.1.0",
    "playwright": "^1.47.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^4.0.16"
  }
}
